# LINE Bot 設定 - 從 LINE Developers Console 取得
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here

# 伺服器設定
PORT=3000
NODE_ENV=development

# 資料庫
DATABASE_PATH=./data/bot.sqlite

# API 安全設定
API_SECRET_KEY=your-very-secure-secret-key-change-this
JWT_SECRET=your-jwt-secret-for-tokens-change-this

# 推送限制
MAX_PUSH_RATE=500
MAX_MESSAGE_LENGTH=2000

# 日誌設定
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Webhook URL (for LINE Console)
# 開發時使用 ngrok: https://your-ngrok-url.ngrok.io/webhook
# 正式環境: https://your-domain.com/webhook