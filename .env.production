# 生產環境變數 (將被 GitHub Secrets 覆蓋)
NODE_ENV=production
PORT=8787

# LINE Bot 設定 (生產用 - 透過 GitHub Secrets 設定)
LINE_CHANNEL_ACCESS_TOKEN=
LINE_CHANNEL_SECRET=
LINE_CHANNEL_ID=

# 資料庫 (Cloudflare D1)
DATABASE_PATH=

# API 安全設定 (透過 GitHub Secrets 設定)
API_SECRET_KEY=
JWT_SECRET=

# 推送限制
MAX_PUSH_RATE=1000
MAX_MESSAGE_LENGTH=2000

# 日誌設定
LOG_LEVEL=info
LOG_FILE=/tmp/app.log

# Webhook URL (生產環境 - 將設定為 Cloudflare Pages URL)
WEBHOOK_BASE_URL=